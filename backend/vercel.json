{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.js?path=/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    { 
      "src": "/(.*)", 
      "dest": "/api/index.js?path=/$1" 
    }
  ]
}

